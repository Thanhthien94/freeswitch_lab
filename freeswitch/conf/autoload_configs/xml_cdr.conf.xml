<X-PRE-PROCESS cmd="include" data="../vars_local.xml"/>
<configuration name="xml_cdr.conf" description="XML CDR via HTTP">
  <settings>
    <param name="url" value="http://127.0.0.1:3000/fs/cdr"/>
    <param name="log-http-and-disk" value="true"/>
    <param name="log-dir" value="/var/log/freeswitch/xml_cdr"/>
    <param name="debug" value="1"/>
    <param name="method" value="post"/>
    <param name="retries" value="3"/>
    <param name="delay" value="0"/>
    <param name="timeout" value="10"/>
    <param name="format" value="json"/>
    <param name="content-type" value="application/json"/>
    <param name="encode" value="false"/>
    <param name="prefix-a-leg" value="true"/>
    <param name="prefix-b-leg" value="true"/>
  </settings>
</configuration>
